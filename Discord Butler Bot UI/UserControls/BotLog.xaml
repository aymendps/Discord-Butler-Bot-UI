<UserControl x:Class="Discord_Butler_Bot_UI.UserControls.BotLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Discord_Butler_Bot_UI.UserControls"
             mc:Ignorable="d" 
             d:DesignWidth="696"
             Name="UCBotLog">
    <Border BorderBrush="{StaticResource SecondaryColorHover}" BorderThickness="0,0,0,2" >
        <StackPanel Orientation="Horizontal" Height="80" Background="{StaticResource SecondaryColor}">
            <Rectangle Name="StatusBar" Fill="{Binding StatusColor, ElementName=UCBotLog}" d:Fill="LightGray" Width="10"/>
            <TextBlock Name="LogContent" d:Text="Content of the log here!" VerticalAlignment="Center" Margin="20,0,0,0" Width="529" FontSize="20" Foreground="White" TextTrimming="WordEllipsis" TextWrapping="NoWrap"></TextBlock>
            <TextBlock Name="LogDate" Text="{Binding LogDateText, ElementName=UCBotLog}" d:Text="00:00:00" VerticalAlignment="Center" Margin="30,0,0,0" FontSize="20" Foreground="LightGray"/>
        </StackPanel>
    </Border>
</UserControl>
